<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dp"/>
            <gradient
                android:angle="0"
                android:centerColor="#e8e8e8"
                android:endColor="#e8e8e8"
                android:startColor="#e8e8e8"/>
        </shape>
    </item>

    <item android:id="@android:id/background" android:bottom="5dp" android:left="5dp"
          android:right="5dp" android:top="5dp">
        <shape>
            <corners android:radius="5dp"/>
            <gradient
                android:angle="0"
                android:centerColor="#a2d5fc"
                android:endColor="#a2d5fc"
                android:startColor="#a2d5fc"/>
        </shape>
    </item>


</layer-list>